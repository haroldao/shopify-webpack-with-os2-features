<!-- /templates/customers/login.liquid -->

<h2>Login</h2>
{% form 'customer_login' %}

{{ form.errors | default_errors }}

<label for="customer_email">Email Address</label>
<input type="email" name="customer[email]" aria-label="Email Address"/>

<label for="customer_password">Password</label>
<input type="password" name="customer[password]" aria-label="Password"/>

<input type="submit" value="Sign In" aria-label="Submit"/>

{% endform %}

<h2>Forgot Password</h2>
{% form 'recover_customer_password' %}

{{ form.errors | default_errors }}

<label for="customer_email">Email Address</label>
<input type="email" name="email" aria-label="Email Address"/>

<input type="submit" value="Submit" aria-label="Submit"/>

{% endform %}
