<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    {% if settings.primary_color %}
      <meta name="theme-color" content="{{ settings.primary_color }}">
      <meta name="msapplication-TileColor" content="{{ settings.primary_color }}">
    {% endif %}
    
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    <link rel="preconnect" href="https://monorail-edge.shopifysvc.com" crossorigin>

    {% liquid
      render 'seo-meta-tags'
      render 'favicon-meta-tags'
      render 'script-liquid-tags'
      render 'style-liquid-tags'
      render 'social-meta-tags'
    %}
    
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    <noscript>{{ 'theme.css' | asset_url | stylesheet_tag }}</noscript>

    <!-- BEGIN Header hook for plugins -->
    {{ content_for_header }}
    <!-- END Header hook for plugins -->

    <link rel="preload" href="{{ 'theme.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  </head>
  <body class="template-{{ request.page_type | handle }}" data-template="{{ template.name }}" data-template-suffix="{{ template.suffix }}">
    {% render 'skip-to-content' %}
    {% comment %} {% section 'announcement-bar' %} {% endcomment %}
    {% comment %} {% section 'header' %} {% endcomment %}
    <main id="MainContent" role="main" tabindex="-1">
      <!-- BEGIN content_for_layout -->
      {{ content_for_layout }}
      <!-- END content_for_layout -->
    </main>
    {% comment %} {% section 'footer' %} {% endcomment %}
  </body>
</html>
