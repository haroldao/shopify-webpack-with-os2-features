<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    {% if settings.primary_color %}
    <meta name="theme-color" content="{{ settings.primary_color }}">
    <meta name="msapplication-TileColor" content="{{ settings.primary_color }}">
    {% endif %}
    <title>{{ page_title }}</title>
    
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    <link rel="preconnect" href="https://monorail-edge.shopifysvc.com" crossorigin>


    {% liquid
      render 'seo-meta-tags'
      render 'favicon-meta-tags'
      render 'script-liquid-tags'
      render 'style-liquid-tags'
      render 'social-meta-tags'
    %}

    <link rel="preload" href="{{ 'password.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript>{{ 'password.css' | asset_url | stylesheet_tag }}</noscript>

    <script src="{{ 'password.js' | asset_url }}" defer></script>

    <!-- BEGIN Header hook for plugins -->
    {{ content_for_header }}
    <!-- END Header hook for plugins -->
    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
  </head>
  <body>
    {% render 'skip-to-content' %}
    <main id="MainContentPassword" role="main">
      <!-- BEGIN content_for_layout -->
      {{ content_for_layout }}
      <!-- END content_for_layout -->
    </main>
  </body>
</html>
